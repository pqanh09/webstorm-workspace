@import '../../../node_modules/nib'

.ov-cards-wrapper
  padding 0
  min-height 5rem
  .ov-card-wrapper
    display none
.repeat-done
  .ov-card-wrapper
    float left
    margin 1rem
    display block
    position relative
    text-align center
    .ov-card-container
      padding 1rem
      cursor pointer
      position relative
      width 100%
      height 100%
      text-align center
      line-height 1
      background #fff
      border-radius 4px
      box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)
    .ov-card-container:hover
      box-shadow 0 8px 17px 0 rgba(0, 0, 0, 0.3)
      backface-visibility hidden
    .ov-card-content
      .panel-heading
      .panel-heading-2x
        padding 1rem
        height 5rem
        background-color initial
        border none
        background-image none
        color #428bca
        line-height 2rem
        .ov-card-icon
          color #c5e4f4
          font-size 4em
          line-height 1.5
      .panel-heading-2x
        height 14rem
        .panel-title
          font-size 1.3em
      .panel-body
        line-height 2rem
        padding 1rem
        height 13rem
        color #666
        overflow hidden
